# Production Environment Variables
# Скопируйте этот файл в .env на production сервере и заполните реальными значениями

# База данных PostgreSQL
POSTGRES_USER=your_prod_user
POSTGRES_PASSWORD=your_strong_password_here
POSTGRES_DB=training_bot

# Telegram Bot
TELEGRAM_TOKEN=your_production_bot_token_here

# Flask Application
SECRET_KEY=your_super_secret_production_key_here_min_32_chars
FLASK_DEBUG=0

# Администраторы
ADMIN_IDS=your_telegram_id_here
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_strong_admin_password_here

# Окружение
TZ=Europe/Moscow
PYTHONUNBUFFERED=1

# Порты
BOT_PORT=5000

# DNS серверы
DNS_PRIMARY=8.8.8.8
DNS_SECONDARY=8.8.4.4

# Database URL (будет сформирован автоматически)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# ============================================
# ВАЖНО: Рекомендации по безопасности
# ============================================
# 1. Используйте сильные пароли (минимум 16 символов)
# 2. Не храните этот файл в git (он в .gitignore)
# 3. Регулярно меняйте пароли и ключи
# 4. SECRET_KEY должен быть уникальным для каждого окружения
# 5. Для генерации SECRET_KEY используйте:
#    python -c "import secrets; print(secrets.token_hex(32))"
